extends layout

block content
  .page 
    .container
      nav
      h1= title
      p Welcome to #{title}
      //- p
      //-   span.font-italic My first offer test: #{offers.map(offer => offer.title)}
      //- p &nbsp;
      //- p &nbsp;
      .row
        .col-sm-6
          each offer of offers
            .card
              img.card-img-top(src=offer.photos[0] alt=offer.title height='*')
              h3.card-header #{offer.title} 
              .card-body
                h5.card-title Location:&nbsp; 
                  span #{offer.location.slice().reverse().map(loc => loc).join(' ')} 
                .card-text
                h5 Offer Description 
                ul.list-group
                    li.list-group-item
                      p #{offer.description}   
                      //- p #{offer.offerUUID}
              button.btn.btn-primary View Offer

      .row   
        .col-sm-6 
        p &nbsp;
